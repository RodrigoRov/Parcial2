<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userAvatar"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@mipmap/ic_launcher_round"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:text="Username: "
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/fragment_settings_username"
            android:enabled="false"
            android:text="Rodrigo"
            android:textSize="16sp"
            android:gravity="center"
            android:inputType="text"
            android:layout_gravity="bottom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
            <TextView
                android:text="Password: "
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/fragment_settings_password"
                android:enabled="false"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:layout_width="0dp"

                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
            <TextView
                android:text="Confirm Password: "
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/fragment_settings_confpassword"
                android:textSize="16sp"
                android:enabled="false"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cancelar_cambios_perfil"
            android:layout_width="0dp"
            android:text="@string/edit"
            android:layout_height="match_parent"
            android:background="@drawable/my_button"
            android:layout_weight="1"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/guardar_cambios_perfil"
            android:layout_width="0dp"
            android:background="@drawable/my_button"
            android:text="@string/save"
            android:enabled="false"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>